{
  "name": "be-ui",
  "version": "3.0.2",
  "packageManager": "pnpm@6.32.4",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint:ts": "eslint ./packages --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:ts-fix": "eslint --fix ./packages --ext .vue,.js,.ts,.jsx,.tsx",
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "docs:serve": "pnpm run -C docs docs:serve",
    "prettier:fix": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./packages --ext .vue,.js,.ts,.jsx,.tsx": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "pnpm": {
    "overrides": {
      "jsdom": "16.4.0"
    }
  },
  "engines": {
    "node": ">= 16"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "vue": "^3.2.23"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.4",
    "@rollup/plugin-babel": "^5.3.0",
    "vite-dts": "^1.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^27.0.2",
    "@types/marked": "^2.0.2",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vitejs/plugin-vue-jsx": "^1.3.9",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/test-utils": "^2.0.0-rc.16",
    "autoprefixer": "^9.8.8",
    "babel-jest": "26.0.0",
    "husky": "^7.0.4",
    "jest": "26.0.0",
    "sass": "^1.38.0",
    "svg-sprite-loader": "^6.0.9",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-jest": "26.4.4",
    "typescript": "^4.1.3",
    "vite": "^2.9.1",
    "vite-plugin-style-import": "^2.0.0",
    "vite-plugin-windicss": "^1.8.4",
    "vue-jest": "^3.0.7",
    "vue-tsc": "^0.34.6",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "prettier": "2.5.1",
    "pretty-quick": "v3.1.3 ",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@pnpm/find-workspace-packages": "^4.0.0",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^8.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/node": "*",
    "@types/sass": "^1.43.1",
    "@vue/tsconfig": "^0.1.3",
    "lint-staged": "^12.3.7",
    "postcss": "^7.0.39",
    "rollup-plugin-cleanup": "^3.2.1"
  }
}
