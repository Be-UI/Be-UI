{
  "name": "be-ui",
  "version": "3.0.2",
  "packageManager": "pnpm@6.32.4",
  "main": "packages/components/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baiwusanyu-c/Be-UI.git"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "init": "pnpm install --w",
    "dev": "vite --host",
    "build": "rollup -c rollup.config.js && pnpm run release",
    "build:gulp": "gulp -f ./build/gulpfile.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint:ts": "eslint ./packages --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:ts-fix": "eslint --fix ./packages --ext .vue,.js,.ts,.jsx,.tsx",
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "docs:serve": "pnpm run -C docs docs:serve",
    "release": "cp package.json README.md dist",
    "prepare": "husky install",
    "updateDep": "pnpm up"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "pretty-quick --staged --allow-empty",
      "eslint --fix",
      "git add"
    ]
  },
  "pnpm": {
    "overrides": {
      "jsdom": "16.4.0",
      "ts-jest": "27.1.4",
      "jest": "^27.0.2",
      "babel-jest": "^27.5.1",
      "jest-environment-jsdom": "^27.0.2"
    }
  },
  "engines": {
    "node": ">= 16"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "@popperjs/core": "^2.11.5",
    "@vue/shared": "^3.2.33",
    "vue": "^3.2.33"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "@vue/shared": "^3.2.33",
    "vue": "^3.2.33"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@be-ui/docs": "workspace:^1.0.0",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@pnpm/find-workspace-packages": "^4.0.5",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^8.0.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/jest": "^27.5.1",
    "@types/marked": "^4.0.3",
    "@types/node": "*",
    "@types/sass": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vue/tsconfig": "^0.1.3",
    "@vue/vue3-jest": "^27.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.5.1",
    "esbuild": "*",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "sucrase": "^3.20.3",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rollup": "^2.72.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.51.0",
    "ts-jest": "^27.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vue-tsc": "^0.34.13",
    "windicss": "^3.5.3"
  }
}
