{
  "private": false,
  "packageManager": "^pnpm@7.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "homepage": "",
  "repository": "",
  "bugs": "",
  "keywords": [],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "init": "pnpm install",
    "lint:fix": "eslint . --fix",
    "dev": "pnpm run --filter @be-ui/play dev",
    "docs:dev": "pnpm run --filter @be-ui/docs docs:dev",
    "build": "pnpm run --filter @be-ui/build build",
    "build:test": "pnpm run --filter @be-ui/build build:rollup",
    "prepublishOnly": "pnpm run build:all",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "publish": "pnpm publish --no-git-checks --access public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "prepare:lintstaged": "npx husky add .husky/pre-commit \"npm exec lint-staged --allow-empty\"",
    "prepare:commitlint": "git add .husky/pre-commit && npx husky add .husky/commit-msg \"npx --no -- commitlint --edit $1\" && git add .husky/commit-msg",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.2.0",
    "@popperjs/core": "^2.11.5"
  },
  "dependencies": {
    "@be-ui/build": "workspace:*",
    "@be-ui/components": "workspace:*",
    "be-ui": "workspace:*",
    "@be-ui/play": "workspace:*",
    "@be-ui/style": "workspace:*",
    "@be-ui/utils": "workspace:*",
    "@popperjs/core": "^2.11.5"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@baiwusanyu/eslint-config": "^1.0.6",
    "@changesets/cli": "^2.23.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "*",
    "@types/sass": "^1.43.1",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/compiler-sfc": "^3.2.41",
    "@vue/test-utils": "^2.1.0",
    "@vue/tsconfig": "^0.1.3",
    "babel-core": "^6.26.3",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "husky": "^7.0.4",
    "pnpm": "^6.3.0",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0",
    "typescript": "4.8.4",
    "vitest": "^0.24.3",
    "vue": "^3.2.41",
    "vue-tsc": "^1.0.8",
    "jsdom": "latest"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "eslint ./ --fix",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "@baiwusanyu"
    ]
  }
}
